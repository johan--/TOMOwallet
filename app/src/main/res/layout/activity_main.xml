<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_header"
        android:background="@color/color_blue"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/your_wallet"
            android:id="@+id/txt_label"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="16sp"
            android:textColor="@color/color_1"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_action_overflow"
            android:padding="12dp"
            android:background="@drawable/ripple_effect"
            android:id="@+id/btn_menu"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            app:layout_constraintEnd_toStartOf="@id/btn_menu"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:id="@+id/btn_mine"
            android:gravity="center_vertical"
            android:background="@drawable/ripple_effect">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:text="@string/mine_tmc"
                android:textColor="@color/color_1"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:id="@+id/txt_mine_label"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:lottie_fileName="loading.json"
                android:id="@+id/progress_mining"
                app:lottie_loop="true"
                android:visibility="gone"
                app:lottie_autoPlay="true" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/you_have_total"
            android:textColor="@color/color_1"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/txt_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/label_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="0.0"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/color_1"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/label_2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:id="@+id/txt_num_of_total_tmc"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/tmc"
            android:textColor="@color/color_1"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/txt_num_of_total_tmc"
            app:layout_constraintBaseline_toBaselineOf="@id/txt_num_of_total_tmc"
            android:layout_marginStart="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/txt_num_of_total_tmc"
            android:text="@string/blank"
            android:background="@drawable/ripple_effect"
            android:textColor="@color/color_1"
            android:textSize="14sp"
            android:id="@+id/txt_wallet_address"
            android:maxLines="1"
            android:ellipsize="end"/>
    </android.support.constraint.ConstraintLayout>
    <com.jaychang.srv.SimpleRecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/recycler_view"/>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        fab:fab_colorNormal="@color/color_blue"
        fab:fab_colorPressed="@color/color_50"
        fab:fab_colorRipple="@color/color_50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_send_tmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_colorNormal="@color/color_blue"
            fab:fab_colorPressed="@color/color_50"
            fab:fab_colorRipple="@color/color_50"
            fab:fab_size="mini"
            fab:fab_label="@string/send_tmc" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/btn_receive_tmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            fab:fab_colorNormal="@color/color_blue"
            fab:fab_colorPressed="@color/color_50"
            fab:fab_colorRipple="@color/color_50"
            fab:fab_size="mini"
            fab:fab_label="@string/receive_tmc" />
    </com.github.clans.fab.FloatingActionMenu>
</android.support.constraint.ConstraintLayout>