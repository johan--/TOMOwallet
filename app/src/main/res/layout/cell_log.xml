<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_1">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/blank"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/txt_transaction_type"/>

        <TextView
            android:id="@+id/txt_transaction_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/blank"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/txt_transaction_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="16dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/blank"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_transaction_date"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_3"
            android:id="@+id/txt_message"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/container_tmc">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/tmc_in_tomo_chain"
                    android:id="@+id/txt_label_1"
                    android:textSize="12dp"
                    android:gravity="start|center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/tmc_in_tomo_chain"
                    android:id="@+id/txt_tmc_side_chain"
                    android:gravity="start|center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/color_blue"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="2dp"
                android:paddingLeft="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/tmc_in_eth_chain"
                    android:textSize="12sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/tmc_in_tomo_chain"
                    android:id="@+id/txt_tmc_main_chain"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/color_50"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/total"
                    android:gravity="end|center_vertical"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/blank"
                    android:id="@+id/txt_tmc_total"
                    android:gravity="end|center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/color_3"
                    android:textStyle="bold"/>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/container_tmc"
            android:background="#F4F4F4"
            android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>